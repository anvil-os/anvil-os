
PROJECT_ROOT := $(CURDIR)
CROSS_PREFIX := arm-none-eabi
ARCH := arm
BSP := stm32

SUBDIRS = bsp kernel 

.PHONY all: $(SUBDIRS)

.PHONY clean: $(SUBDIRS)

.PHONY: $(SUBDIRS)
$(SUBDIRS):
	@$(MAKE) -s -C $@ CROSS_PREFIX=$(CROSS_PREFIX) PROJECT_ROOT=$(PROJECT_ROOT) ARCH=$(ARCH) BSP=$(BSP) $(MAKECMDGOALS) 
